  @@index([role])
  @@index([createdAt])
  @@index([conversationId, createdAt])
  @@map("chatbot_messages")
}

// =========================================================
//  SAVED PROPERTY MODEL - For users to save/favorite properties
// =========================================================
model SavedProperty {
  id         Int       @id @default(autoincrement())
  userId     Int // User who saved the property
  propertyId Int // Property that was saved
  savedAt    DateTime  @default(now()) // When the property was saved
  sharedAt   DateTime? // When the property was shared (optional)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  // Ensure a user can only save a property once
  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
  @@index([savedAt])
  @@index([sharedAt])
  @@map("SavedProperty")
}

// =========================================================
//  PROPERTY AVAILABILITY BLOCK MODEL
//  Tracks manual availability blocks for external bookings
//  (Airbnb, Booking.com, walk-ins, etc.)
// =========================================================
model PropertyAvailabilityBlock {
  id         Int @id @default(autoincrement())
  propertyId Int
  ownerId    Int // Owner who created the block

  /// Start date of the block
  startDate DateTime
  /// End date of the block (exclusive, like checkout)
  endDate   DateTime

  /// Optional room code if blocking specific room
  roomCode String? @db.VarChar(60)

  /// Source of the booking (e.g., "AIRBNB", "BOOKING_COM", "WALK_IN", "OTHER")
  source String? @db.VarChar(50)

  /// Optional notes about the block
  notes String? @db.Text

  /// Number of beds/rooms blocked (for room-type level tracking)
  bedsBlocked Int? @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  owner    User     @relation("PropertyAvailabilityBlocks", fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([ownerId])
  @@index([startDate, endDate])
  @@index([propertyId, startDate, endDate])
  @@index([roomCode])
  @@map("PropertyAvailabilityBlock")
}
