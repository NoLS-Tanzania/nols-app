model ChatbotConversation {
  id            Int       @id @default(autoincrement())
  userId        Int? // Optional: user ID if authenticated
  sessionId     String    @unique @db.VarChar(100) // Unique session identifier for anonymous users
  language      String    @default("en") @db.VarChar(10) // Language code: en, es, fr, pt, ar, zh
  needsFollowUp Boolean   @default(false) // Track if conversation needs agent follow-up
  followUpNotes String?   @db.Text // Notes for agents about the conversation
  followedUpAt  DateTime? // When an agent followed up
  followedUpBy  Int? // Agent/admin user ID who followed up
