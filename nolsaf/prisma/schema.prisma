  /// Admin response fields
  adminResponse        String?   @db.Text
  suggestedItineraries String?   @db.Text
  requiredPermits      String?   @db.Text
  estimatedTimeline    String?   @db.Text
  assignedAgent        String?   @db.VarChar(200) // Legacy field (name string)
  assignedAgentId      Int? // New field (reference to Agent)
  respondedAt          DateTime?

  /// Record creation timestamp
  createdAt DateTime @default(now())
  /// Record last update timestamp
  updatedAt DateTime @updatedAt

  // Relations
  user                  User?                @relation("PlanRequestsUser", fields: [userId], references: [id], onDelete: SetNull)
  assignedAgentRelation Agent?               @relation("AssignedAgent", fields: [assignedAgentId], references: [id], onDelete: SetNull)
  agentReviews          AgentReview[]        @relation("AgentReviewsPlanRequest")
  messages              PlanRequestMessage[]

  @@index([role])
  @@index([tripType])
  @@index([status])
  @@index([email])
  @@index([phone])
  @@index([userId])
  @@index([assignedAgentId])
  @@index([createdAt])
  @@index([status, createdAt])
  @@index([userId, status])
  @@map("plan_requests")
}

// =========================================================
//  PLAN REQUEST MESSAGE MODEL - For conversation history
// =========================================================
model PlanRequestMessage {
  id            Int @id @default(autoincrement())
  planRequestId Int

  /// Sender information
  senderId   Int? // User ID if sender is authenticated (admin or customer)
  senderRole String  @db.VarChar(20) // ADMIN, USER, SYSTEM
  senderName String? @db.VarChar(200) // Name for display (if not authenticated)

  /// Message content
  messageType String? @db.VarChar(50) // "Ask for Feedback", "Admin Response", etc.
